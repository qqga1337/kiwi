#Bacula File Demon
cat > /etc/bacula/bacula-fd.conf << EOF
Director {
  Name = c-backup.digital.ru-dir
  Password = "AA98JxbXVsbLlrZG-R6O7Y7TW8DooVq4u"
}

Director {
  Name = c-backup.digital.ru-mon
  Password = "MdexKoTQ1cnIV8pl-D0haZLLv0Otcx2P7"
  Monitor = yes
}

FileDaemon {                          # this is me
  Name = c-backup.digital.ru-fd
  FDport = 9102                  # where we listen for the director
  WorkingDirectory = /var/lib/bacula
  Pid Directory = /run/bacula
  Maximum Concurrent Jobs = 20
  Plugin Directory = /usr/lib/bacula
  FDAddress = 127.0.0.1
}
Messages {
  Name = Standard
  director = c-backup.digital.ru-dir = all, !skipped, !restored
}
EOF

# Bacula Storage
cat > /etc/bacula/bacula-sd.conf <<EOF
Storage {                             # definition of myself
  Name = c-backup.digital.ru-sd
  SDPort = 9103                  # Director's port
  WorkingDirectory = "/var/lib/bacula"
  Pid Directory = "/run/bacula"
  Maximum Concurrent Jobs = 20
  SDAddress = 10.1.2.4
}
Director {
  Name = c-backup.digital.ru-dir
  Password = "OhlwMnCXhzsQFjTPnRTXpTobDTwr3d59t"
}
Director {
  Name = c-backup.digital.ru-mon
  Password = "m8aMQX0lul05tMVupRMCEs9yolEzqwOdH"
  Monitor = yes
}
Autochanger {
  Name = FileChgr1
  Device = FileChgr1-Dev1
  Changer Command = ""
  Changer Device = /dev/null
}
Device {
  Name = FileChgr1-Dev1
  Media Type = File1
  Archive Device = /backup
  LabelMedia = yes;                   # lets Bacula label unlabeled media
  Random Access = Yes;
  AutomaticMount = yes;               # when device opened, read it
  RemovableMedia = no;
  AlwaysOpen = no;
  Maximum Concurrent Jobs = 5
}
Messages {
  Name = Standard
  director = c-backup.digital.ru-dir = all
}
EOF




