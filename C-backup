########  Настройка C-BACKUP.DIGITSL.RU  ##########
hostnamectl set-hostname c-backup.digital.ru
echo "127.0.0.1 c-backup.digital.ru c-backup" >> /etc/hosts

#УСтанавливаем bacula 
apt update
apt install -y bacula-common-pgsql bacula-director bacula-director-pgsql bacula-console bacula-console-qt bacula-fd bacula-bscan
chmod 777 /etc/bacula/bat.conf
#Создаем папку. куда будем складывать бэкапы и куда восстанавливать
mkdir /backup
chown -R bacula:bacula /backup/
mkdir /restore
chown -R bacula:bacula /restore

# Конфиг Директора

cat > /etc/bacula/bacula-dir.conf <<EOF
#
# Default Bacula Director Configuration file
#
#  The only thing that MUST be changed is to add one or more
#   file or directory names in the Include directive of the
#   FileSet resource.
#
#  For Bacula release 7.4.4 (20 September 2016) -- AstraLinuxCE 2.12.43
#
#  You might also want to change the default email address
#   from root to your address.  See the "mail" and "operator"
#   directives in the Messages resource.
#
# Copyright (C) 2000-2015 Kern Sibbald
# License: BSD 2-Clause; see file LICENSE-FOSS
#
 
Director {                            # define myself
  Name = c-backup.digital.ru-dir
  DIRport = 9101                # where we listen for UA connections
  QueryFile = "/etc/bacula/scripts/query.sql"
  WorkingDirectory = "/var/lib/bacula"
  PidDirectory = "/run/bacula"
  Maximum Concurrent Jobs = 20
  Password = "pT8vLJBdgusIaqIyI16nEdalSVo4O-h4X"         # Console password
  Messages = Daemon
  DirAddress = 10.1.2.4
}

JobDefs {
  Name = "DefaultJob"
  Type = Backup
  Level = Incremental
  Client = c-backup.digital.ru-fd
  FileSet = "Backup etc"
  Schedule = "WeeklyCycle"
  Storage = File1
  Messages = Standard
  Pool = File
  SpoolAttributes = yes
  Priority = 10
  Write Bootstrap = "/var/lib/bacula/%c.bsr"
}

JobDefs {
  Name = "GitLab"
  Type = Backup
  Level = Full
  Client = cgit.digital.ru-fd
  FileSet = "GitLab"
  Schedule = "WeeklyCycle"
  Storage = File1
  Messages = Standard
  Pool = File
  SpoolAttributes = yes
  Priority = 10
  Write Bootstrap = "/var/lib/bacula/%c.bsr"
}


#
# Define the main nightly save backup job
#   By default, this job will back up to disk in /nonexistant/path/to/file/archive/dir
Job {
  Name = "BackupClient1"
  JobDefs = "DefaultJob"
}

#Job {
#  Name = "BackupClient2"
#  Client = c-backup.digital.ru2-fd
#  JobDefs = "DefaultJob"
#}

#Job {
#  Name = "BackupClient1-to-Tape"
#  JobDefs = "DefaultJob"
#  Storage = LTO-4
#  Spool Data = yes    # Avoid shoe-shine
#  Pool = Default
#}

#}

# Backup the catalog database (after the nightly save)
Job {
  Name = "BackupCatalog"
  JobDefs = "DefaultJob"
  Level = Full
  FileSet="Catalog"
  Schedule = "WeeklyCycleAfterBackup"
  # This creates an ASCII copy of the catalog
  # Arguments to make_catalog_backup.pl are:
  #  make_catalog_backup.pl <catalog-name>
  RunBeforeJob = "/etc/bacula/scripts/make_catalog_backup.pl MyCatalog"
  # This deletes the copy of the catalog
  RunAfterJob  = "/etc/bacula/scripts/delete_catalog_backup"
  Write Bootstrap = "/var/lib/bacula/%n.bsr"
  Priority = 11                   # run after main backup
}

#
# Standard Restore template, to be changed by Console program
#  Only one such job is needed for all Jobs/Clients/Storage ...
#
Job {
  Name = "RestoreFiles"
  Type = Restore
  Client=c-backup.digital.ru-fd
  FileSet="Backup etc"
  Storage = File1
  Pool = File
  Messages = Standard
  Where = /restore
}

Job {
  Name = "GitLab Files"
  JobDefs = "GitLab"
  Level = Full
  FileSet="GitLab"
  Schedule = "WeeklyCycle"
  Priority = 10                   
}
Job {
  Name = "PSQL backup"
  Enabled = yes
  Messages = Standard
  Pool = File
  Client = csrv1.digital.ru-fd
  Type = backup
  Level = Full
  FileSet = "PSQL"
  Schedule = "WeeklyCycle"
  Priority = 10
  Storage = File1
  Write Bootstrap = "/var/lib/bacula/%c.bsr"
  ClientRunBeforeJob = "/etc/bacula/pre-sql-backup.sh"
}


# List of files to be backed up
FileSet {
  Name = "GitLab"
  Include {
    Options {
      signature = MD5
    }
    File = /root/gitlab
  }
}

FileSet {
  Name = "PSQL"
  Include {
    Options {
      signature = MD5
    }
    File = /opt/psql-backup
  }  
}

FileSet {
  Name = "Backup etc"
  Include {
    Options {
      signature = MD5
    }
    File = /etc
  }
  Exclude {
    File = /var/lib/bacula
    File = /nonexistant/path/to/file/archive/dir
    File = /proc
    File = /tmp
    File = /sys
    File = /.journal
    File = /.fsck
  }
}

#
# When to do the backups, full backup on first sunday of the month,
#  differential (i.e. incremental since full) every other sunday,
#  and incremental backups other days
Schedule {
  Name = "WeeklyCycle"
  Run = Full 1st sun at 23:05
  Run = Differential 2nd-5th sun at 23:05
  Run = Incremental mon-sat at 23:05
}

# This schedule does the catalog. It starts after the WeeklyCycle
Schedule {
  Name = "WeeklyCycleAfterBackup"
  Run = Full sun-sat at 23:10
}

# This is the backup of the catalog
FileSet {
  Name = "Catalog"
  Include {
    Options {
      signature = MD5
    }
    File = "/var/lib/bacula/bacula.sql"
  }
}

# Client (File Services) to backup
Client {
  Name = c-backup.digital.ru-fd
  Address = localhost
  FDPort = 9102
  Catalog = MyCatalog
  Password = "AA98JxbXVsbLlrZG-R6O7Y7TW8DooVq4u"          # password for FileDaemon
  File Retention = 60 days            # 60 days
  Job Retention = 6 months            # six months
  AutoPrune = yes                     # Prune expired Jobs/Files
}


Client {
  Name = csrv1.digital.ru-fd
  Address = 10.1.2.3
  FDPort = 9102
  Catalog = MyCatalog
  Password = "P@ssw0rd"          # password for FileDaemon
  File Retention = 60 days            # 60 days
  Job Retention = 6 months            # six months
  AutoPrune = yes                     # Prune expired Jobs/Files
}

Client {
  Name = cgit.digital.ru-fd
  Address = 10.1.2.5
  FDPort = 9102
  Catalog = MyCatalog
  Password = "P@ssw0rd"          # password for FileDaemon
  File Retention = 60 days            # 60 days
  Job Retention = 6 months            # six months
  AutoPrune = yes                     # Prune expired Jobs/Files
}


